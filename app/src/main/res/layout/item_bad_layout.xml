<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#EEEEEE"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="#DDDDDD"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image lồng sâu + wrap_content -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_launcher_foreground"/>
            </LinearLayout>

            <!-- Text cực nặng -->
            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtName"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:text="Item title rất dài để gây re-measure liên tục khi wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Đây là một đoạn mô tả rất dài, nhiều dòng, buộc hệ thống phải đo text nhiều lần khi layout lại, đặc biệt là trong RecyclerView khi scroll nhanh."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
